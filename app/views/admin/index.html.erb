<h1>Admin Dashboard</h1>

<%= link_to 'Merchants', '/admin/merchants' %>
<%= link_to 'Invoices', '/admin/invoices' %>

<h3> Top Customers </h3>
<ol>
<% @top_customers.each do |customer| %>
  <li><%= customer[0] %> - <%= customer[1] %> purchase(s)</li>
<% end %>
</ol>

<h3> Incomplete Invoices </h3>
<% @pending_invoices.each do |invoice| %>
  <div id="id-<%= invoice.id %>">
    Invoice #<%= link_to "#{invoice.id}", "/admin/invoices/#{invoice.id}" %> - <%= invoice.created_at.strftime("%A, %B %-d, %Y") %><br>
  </div>
<% end %>
