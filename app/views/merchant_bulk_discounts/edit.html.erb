<%= form_with url: "/merchants/#{@merchant.id}/discounts/#{@discount.id}", method: :patch, local: true do |f| %>
  <%= f.label :discount %>
  <%= f.number_field :discount %>
  <%= f.label :quantity_threshold %>
  <%= f.number_field :quantity_threshold %>
  <%= f.submit "Update Discount" %>
<% end %>
