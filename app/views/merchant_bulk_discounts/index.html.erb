<h3> Bulk Discounts </h3>

<div id="Holidays">
<h4> Upcoming Holidays </h4>
<% @holidays.holiday_information[0..2].each do |holiday| %>
  <%= holiday.name %>:
  <%= holiday.date %><p>
<% end %>
</div>

<% @discounts.each do |discount| %>
<div id="id-<%=discount.id%>">
  <h4>Discount #<%= discount.id %></h4><p>
  Discount: <%= discount.discount %>% <p>
  Quantity Threshold: <%= discount.quantity_threshold %> <p>
  <%= link_to "Discount Details", "/merchants/#{discount.merchant_id}/discounts/#{discount.id}" %>
  <%= link_to "Delete Discount", "/merchants/#{discount.merchant_id}/discounts/#{discount.id}", method: :delete %>
</div>
<% end %>

<%= link_to "Create New Discount", "/merchants/#{@merchant.id}/discounts/new" %>
