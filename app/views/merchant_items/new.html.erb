<h1>New Item</h1>

<%= form_with url: "/merchants/#{@merchant.id}/items", method: :post do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>

  <%= f.label :description %>
  <%= f.text_area :description %><br>

  <%= f.label 'Price: $' %>
  <%= f.number_field :unit_price %><br>

  <%= f.submit %>
<% end %>
